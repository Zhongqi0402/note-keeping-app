<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/single_note" android:orientation="horizontal"
              android:paddingRight="10dp" android:paddingLeft="10dp" android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:textAlignment="center" android:layout_marginVertical="5dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="wrap_content" android:id="@+id/note_info">
        <TextView
                android:text="TextView"
                android:layout_height="20dp" android:id="@+id/note_title"
                android:textStyle="bold" android:layout_width="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp" android:id="@+id/note_content"
                android:text="Textview"/>
    </LinearLayout>
    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="3" android:id="@+id/single_note_space"
    />
    <Button
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/archive_btn"
            android:layout_marginEnd="12dp" android:minWidth="40dp" android:maxWidth="40dp"
            tools:ignore="TouchTargetSizeCheck" android:layout_weight="0"/>
    <Button
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/delete_btn"
            android:maxWidth="40dp" android:minWidth="40dp" tools:ignore="TouchTargetSizeCheck"/>
</LinearLayout>